<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dc.mapper.CategoryMapper">
    <select id="pageQuery" resultType="com.dc.entity.Category">
        SELECT *
        FROM category
        <where>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="type != null">
                type = #{type}
            </if>
        </where>
    </select>

    <select id="list" resultType="com.dc.entity.Category">
        SELECT *
        FROM category
        <if test="type != null and type != ''">
            WHERE type = #{type}
        </if>
    </select>

    <insert id="add">
        INSERT INTO category (type, name, sort, status, create_time, update_time, create_user, update_user)
        VALUES (#{id}, #{name}, #{sort}, #{status}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>

    <update id="update" parameterType="com.dc.entity.Category">
        UPDATE category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateUser != null">update_user = #{updateUser}</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="activateOrDeactivate">
        UPDATE category
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM category
        WHERE id = #{id}
    </delete>
</mapper>